<% provide(:title, 'Create Ads') %>
<h1>Create Ads</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
    <%= form_for(@ad) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	  
        <%= f.label :company_name %>
        <%= f.text_field :company_name, placeholder: "Enter your company name here" %>
      
        <%= f.label :ad_text %>
        <%= f.text_area :ad_text, placeholder: "Enter your ad text here" %>
	  
        <%= f.submit "Create an ad", class: "btn btn-primary" %>
	<% end %>
    </div>
</div>